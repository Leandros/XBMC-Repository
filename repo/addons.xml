<?xml version="1.0" encoding="UTF-8"?>
<addons>
<addon id="plugin.programs.steambmcdev"
       name="SteamBMC"
       version="0.1.0"
       provider-name="Leandros">
    <requires>
        <!-- You need superrepo.org -->
        <import addon="script.module.pil" version="1.1.7"/>
      <import addon="script.module.requests2" version="2.2.0"/>
      <import addon="xbmc.python" version="2.1.0"/>
    </requires>
    <extension point="xbmc.python.pluginsource"
               library="default.py">
        <provides>executable</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <language>en</language>
        <platform>all</platform>
        <summary>SteamBMC</summary>
        <description>Browse and launch all your Steam games from XBMC. Games are automatically added using your library contents. Fanart and images are added for games where available.</description>
        <disclaimer>You will need Steam installed and an active web connection to launch games. Currently only supports Windows, however Linux and OS X support should be available soon.

The "VALVe Logo", Valve and Steam are trademarks of Valve Corporation.</disclaimer>
        <license>GNU GENERAL PUBLIC LICENSE. Version 2</license>
    </extension>
</addon>
<addon id="script.module.requests2" name="requests2" version="2.2.0" provider-name="kennethreitz">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.module" library="lib" />
  <extension point="xbmc.addon.metadata">
    <summary>Python HTTP for Humans</summary>
    <description>Packed for XBMC from https://github.com/kennethreitz/requests</description>
    <license>Apache</license>
    <platform>all</platform>
    <source>https://github.com/leandros/xbmc-repository</source>
  </extension>
</addon>
<addon id="repository.leandros.xbmc-plugins" name="Leandros Repository" version="1.0.0" provider-name="Leandros">
  <extension point="xbmc.addon.repository" name="Leandros Repository">
        <info compressed="false">http://xbmcrepo.arvid-g.de/addons.xml</info>
        <checksum>http://xbmcrepo.arvid-g.de/addons.xml.md5</checksum>
        <datadir zip="true">http://xbmcrepo.arvid-g.de</datadir>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en">Repository from Leandros</summary>
        <description lang="en">Leandros' Repository for XBMC</description>
        <disclaimer></disclaimer>
        <platform>all</platform>
    </extension>
</addon>
</addons>
